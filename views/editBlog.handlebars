{{#each blogs as |blog|}}
<div>
  <div class="flex flex-col flex-wrap justify-center m-3 border-8 border-yellow-950 rounded-md">
    <form class="form edit-blog-form m-1" data-id="{{blog.id}}">
      <div class="form-group flex flex-col m-1">
        <label class="font-semibold text-sm sm:text-lg md:text-xl my-1" for="blog-name">Blog Post title:</label>
        <input class="form-input p-1" type="text" id="blog-title" name="blog-title" value="{{blog.title}}"/>
      </div>
      <div class="form-group flex flex-col m-1">
        <label class="font-semibold text-sm sm:text-lg md:text-xl my-1" for="blog-desc">description:</label>
        <textarea class="form-input p-1" id="blog-desc" name="blog-desc">{{blog.description}}</textarea>
      </div>
      <div class="form-group grid m-1 mt-2">
        <button type="submit" class="text-lime-200 bg-gray-500 rounded-md font-semibold text-sm sm:text-lg md:text-xl btn btn-primary">Update</button>
      </div>
    </form>
  </div>
{{/each}}

<script src="../js/editBlog.js"></script>