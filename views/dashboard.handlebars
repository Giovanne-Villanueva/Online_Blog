<div>
  <div>
    <h2 class="text-yellow-950 font-semibold text-base sm:text-xl md:text-2xl p-3">Welcome, {{name}}!</h2>
  </div>
</div>

<div>
  <div class="hidden flex flex-col flex-wrap justify-center m-3 border-8 border-yellow-950 rounded-md create">
    <form class="form new-blog-form m-1">
      <div class="form-group flex flex-col m-1">
        <label class="font-semibold text-sm sm:text-lg md:text-xl my-1" for="blog-name">Blog Post title:</label>
        <input class="form-input p-1" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group flex flex-col m-1">
        <label class="font-semibold text-sm sm:text-lg md:text-xl my-1" for="blog-desc">description:</label>
        <textarea class="form-input p-1" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group grid m-1 mt-2">
        <button type="submit" class="text-lime-200 bg-gray-500 rounded-md font-semibold text-sm sm:text-lg md:text-xl btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <p>
    <button class="add text-lime-200 bg-gray-500 rounded-md font-semibold text-sm sm:text-lg md:text-xl btn p-1 m-3" type="button">Add a Post</button>
  </p>

  {{#if blogs.length}}
  <div class="blog-list">
    {{#each blogs as |blog|}}
    <div class="flex flex-col flex-wrap justify-center m-3 border-8 border-yellow-950 rounded-md md:w-1/2" >
      <div class="bg-yellow-950 text-lime-200 ">
        <h4 class="my-2"><a class="font-semibold text-sm sm:text-lg md:text-xl my-1 " href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="grid grid-cols-2 m-2 ">
        <button class="mx-2 text-lime-200 bg-gray-500 rounded-md font-semibold text-sm sm:text-lg md:text-xl btn btn-primary" data-option="delete" data-id="{{blog.id}}">DELETE</button>
        <button class="mx-2 text-lime-200 bg-gray-500 rounded-md font-semibold text-sm sm:text-lg md:text-xl btn btn-primary" data-option="edit" data-id="{{blog.id}}">EDIT</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>