<div>
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div>
    <h3>Comment Section</h3>
  {{#each comments as |comment|}}
  <div>
    <p>{{comment.description}}</p>
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  {{/each}}
  </div>
  <p>
    <button class="add" type="button">Add a Comment</button>
  </p>

  <form class="form hide">
    <div class="form-group">
    <label for="comment">Comment:</label>
    <input class="form-input" type="text" id="comment" data-id="{{id}}"/>
    </div>
    <div class="form-group">
    <button class='submitBtn' type="submit">Submit Comment!</button>
    </div>
  </form>

</div>

<script src="../js/blog.js"></script>
